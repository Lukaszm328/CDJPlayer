<Page
    x:Class="CDJPlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDJPlayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local1="using:CDJPlayer.Views"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    d:DesignHeight="480" d:DesignWidth="640">

    <Grid Background="Black" >
        <StackPanel>
            <StackPanel Name="settings"/>
            <StackPanel Name="titlePanel"/>
            <StackPanel Height="295">
                <StackPanel Name="fileBrowser" Visibility="Visible"/>
                <StackPanel Name="effects" HorizontalAlignment="Center" Visibility="Visible" />
            </StackPanel>
            <StackPanel Name="player"/>
        </StackPanel>
    </Grid>
</Page>